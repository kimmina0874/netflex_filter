{
  "manifest_version": 3,
  "name": "넷플릭스 작품 숨기기 필터",
  "version": "0.1.0",
  "description": "보고 싶지 않은 넷플릭스 작품을 자동으로 숨겨 주는 넷플릭스 필터 툴입니다. 앞으로 여러 사이트용 툴이 추가될 예정입니다.",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://www.netflix.com/*"
  ],
  "action": {
    "default_title": "넷플릭스 작품 숨기기 필터 설정",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.netflix.com/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ]
}
