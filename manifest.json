{
  "manifest_version": 3,
  "name": "__MSG_appName__",
  "version": "0.1.1",
  "description": "__MSG_appDesc__",
  "default_locale": "en",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://www.netflix.com/*"
  ],
  "action": {
    "default_title": "__MSG_popupTitle__",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/netflix-icon.svg",
      "48": "icons/netflix-icon.svg",
      "128": "icons/netflix-icon.svg"
    }
  },
  "icons": {
    "16": "icons/netflix-icon.svg",
    "48": "icons/netflix-icon.svg",
    "128": "icons/netflix-icon.svg"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.netflix.com/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ]
}